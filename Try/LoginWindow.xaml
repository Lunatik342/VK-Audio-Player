<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Try"
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="Try.LoginWindow"
        mc:Ignorable="d"
        Title="Login" Height="520" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <awe:WebControl x:Name="MyWebBrowser"/>
        <CheckBox x:Name="checkBox" Content="Save infromation to access audio without logging in." HorizontalAlignment="Right"  Grid.Row="1" VerticalAlignment="Top" Margin="0,5,10,0" Height="40" Width="300"/>

    </Grid>
</Window>
